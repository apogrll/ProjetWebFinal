{% extends "Master.html.jinja2" %}


<head>
    <title> NOS PRODUITS </title>
</head>

{% block body %}

    <style>
        h1 {
            font-weight: bold;
            color: darkgrey
        }
    </style>



    <h1 class="title"> Nos {{ categorie }} </h1>



    <h3 style="color:grey" style="font-weight: bold"> Faites votre selection </h3>
    <div class="row">

        <!--  ----------------------------------------------------------------------------------------------------  -->
        <!--  CARD DE /SANDWICHS -->
        <!--  ----------------------------------------------------------------------------------------------------  -->

        {% for produit in sandwichs_1 %}
