<head>
    <title> VIEW CAFET </title>
</head>

{% block body %}
    <style>
        body {
            background-color: beige;
        }

        form {
            font-palette: light;
            font-style: revert;
            color: black;
        }

        card-body {
            background-color: burlywood;
        }
    </style>


    <table class="table">

        <thead>

        <tr>
            <th scope="row"></th>
            <th scope="col">Produit Commandé</th>
            <th scope="col">Nom client</th>
            <th scope="col"> Prénom client</th>
        </tr>
        </thead>

        <tbody>
            {% for res in reservations %}
                <tr>
                    <th scope="row"></th>
                    <td>{{ res.produit }}</td>
                    <td>{{ res.nom }}</td>
                    <td>{{ res.prenom }}</td>
                </tr>
            {% endfor %}

        </tbody>

    </table>



{% endblock %}