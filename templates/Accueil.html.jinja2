{% extends "Master.html.jinja2" %}


<head>
    <title> Accueil </title>
</head>

{% block body %}

    <style>
        body {
            background-color: #e5e7e3;
        }

        h1 {
            font-weight: bold;
            color: #061b1e;
        }

        h2 {
            font-weight: bold;
            color: #061b1e;
        }

    </style>

    <!-- ------------------------------------------------------------------------------------------------ -->
    <!-- Affichage -->
    <h1> TOUS NOS PRODUITS </h1>

    {% for category_name in categories_dict %}
        <h2> Nos {{ category_name }}</h2>

        <div class="row">
            {% for produit in categories_dict[category_name] %}

                <div class="col-sm-3">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> {{ produit.nom_s }} </h5>
                            <p class="card-text"> {{ produit.description }}</p>
                            <h6 class="card-subtitle mb-2 text-muted"> Quantite restante
                                : {{ produit.quantite_restante }} </h6>
                            <h6 class="card-subtitle mb-2 text-muted"> Prix : {{ produit.prix_s }} â‚¬ </h6>
                            <a href="{{ url_for("reservation", id=produit.id_s) }}" class="btn btn-primary">RESERVER</a>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>

        <h1></h1>
        <!-- Bouton "Voir plus" -->
        <a class="btn btn-secondary btn-lg btn-block" href="{{ url_for("produits", cat=category_name) }}"
           style="color: black; background-color: #e6d5cb;">Voir plus de {{ category_name }}</a>


    {% endfor %}



{% endblock %}
