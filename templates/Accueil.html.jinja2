{% extends "Master.html.jinja2" %}


<head>
    <title> Accueil </title>
</head>

{% block body %}


    <style>
        body {
            background-color: white;
        }

        h1 {
            font-weight: bold;
            color: #89023e;
            font-family: Gabriola;
        }

        h2 {
            font-weight: bold;
            color: #9e3061;
            font-family: Gabriola;
        }

        h5 {
            color: #000000;
            font-family: Gabriola;
            font-weight: bold;
        }

        p {
            color: #000000;
            font-family: Gabriola;
        }

        h6 {
            color: #000000;
            font-family: Gabriola;
        }

        a {
            color: #000000;
            font-family: Gabriola;
        }

    </style>

    <!-- ------------------------------------------------------------------------------------------------ -->
    <!-- Affichage -->
    <h1> TOUS NOS PRODUITS </h1>

    {% for category_name in categories_dict %}
        <h2> Nos {{ category_name }}</h2>

        <div class="row">
            {% for produit in categories_dict[category_name] %}

                <div class="col-sm-3">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> {{ produit.nom_s }} </h5>
                            <p class="card-text"> {{ produit.description }}</p>
                            <h6 class="card-subtitle mb-2 text-muted"> Quantite restante
                                : {{ produit.quantite_restante }} </h6>
                            <h6 class="card-subtitle mb-2 text-muted"> Prix : {{ produit.prix_s }} â‚¬ </h6>
                            <a style="color: #000000; background-color: #e55090; font-weight: bold"
                               href="{{ url_for("reservation", id=produit.id_s) }}" class="btn"> -> RESERVER !</a>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>

        <h1></h1>
        <!-- Bouton "Voir plus" -->
        <div class="row">
            <div class="col-sm-4">
                <a class="btn btn-secondary btn-lg btn-block" href="{{ url_for("produits", cat=category_name) }}"
                   style="color: #000000; background-color: #f8f4ea; font-weight: bold">Voir plus
                    de {{ category_name }}</a>
            </div>
        </div>

        <h1></h1>


    {% endfor %}


{% endblock %}
